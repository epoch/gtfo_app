

<%= form_for @reservation do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :start_at, 'Time' %>
    <%= f.time_select :start_at, :default => {:hour => '2', :minute => '00'} %>
  </p>

  <p>
    <%= f.text_field :room_id %>
  </p>

  <button>Reserve!</button>
<% end %>